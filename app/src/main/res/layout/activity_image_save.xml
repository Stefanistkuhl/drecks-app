<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="at.logbait.retrofade.ImageSaveActivity">

    <ImageView
        android:id="@+id/image_view_save"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/hakerl_save"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/hakerl_xml"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/hakerl_style"
        />

    <Button
        android:id="@+id/x_save"
        style="@style/x_style"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/x_xml"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>